@model Domain.Entities.Hotel

@{
    ViewData["Title"] = "Новий готель";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow p-4">
            <h3 class="mb-3">🏨 Додати новий готель</h3>

            <form asp-action="CreateHotel" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Назва готелю</label>
                    <input asp-for="Name" class="form-control" placeholder="Наприклад: Grand Hotel" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Адреса</label>
                    <input asp-for="Address" class="form-control" placeholder="Вулиця, місто..." />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Опис</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    <button type="submit" class="btn btn-success px-4">Зберегти</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}