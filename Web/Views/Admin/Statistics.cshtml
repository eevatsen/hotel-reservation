@model IEnumerable<Web.Models.HotelStatsViewModel>

@{
    ViewData["Title"] = "Статистика";
}

<div class="container mt-4">
    <h2 class="mb-4">Аналітика бронювань</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Фінансовий звіт
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Готель</th>
                                <th class="text-center">Бронювань</th>
                                <th class="text-end">Дохід</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HotelName</td>
                                    <td class="text-center">@item.TotalBookings</td>
                                    <td class="text-end fw-bold text-success">@item.TotalRevenue ₴</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    Графік прибутковості
                </div>
                <div class="card-body">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const labels = @Html.Raw(Json.Serialize(Model.Select(m => m.HotelName)));
    const data = @Html.Raw(Json.Serialize(Model.Select(m => m.TotalRevenue)));

    const ctx = document.getElementById('revenueChart');

    new Chart(ctx, {
        type: 'bar', 
        data: {
            labels: labels,
            datasets: [{
                label: 'Виручка (грн)',
                data: data,
                backgroundColor: [
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(255, 206, 86, 0.6)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>