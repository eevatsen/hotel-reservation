@using Domain.Entities
@model IEnumerable<Hotel>

@{
    ViewData["Title"] = "Головна";
}

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Знайдіть ідеальний готель</h1>
        <p class="lead">Найкращі ціни, комфортні номери та незабутні враження.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg mt-3">Приєднатися до нас</a>
        }
    </div>
</div>

<div class="container mb-5" style="margin-top: -50px; position: relative; z-index: 10;">
    <div class="card shadow border-0 p-4">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">

            <div class="col-md-5">
                <label class="form-label fw-bold text-muted">Куди хочете поїхати?</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" name="city" class="form-control border-start-0 ps-0"
                           placeholder="Наприклад: Kyiv, Lviv..."
                           value="@ViewData["CurrentCity"]">
                </div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold text-muted">Кількість гостей</label>
                <input type="number" name="guestCount" class="form-control"
                       placeholder="1" min="1" max="10"
                       value="@ViewData["CurrentGuestCount"]">
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                    🔍 Знайти
                </button>
            </div>

            @if (ViewData["CurrentCity"] != null || ViewData["CurrentGuestCount"] != null)
            {
                <div class="col-12 text-end mt-2">
                    <a asp-action="Index" class="text-decoration-none text-danger small">✖ Скинути фільтри</a>
                </div>
            }
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <div class="alert alert-info py-5">
                    <h4>Поки що готелів немає 😔</h4>
                    <p>Адміністратор скоро додасть нові варіанти!</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var hotel in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 hotel-card shadow-sm">
                        <img src="https://placehold.co/600x400/2980b9/ffffff?text=@hotel.Name" class="card-img-top" alt="@hotel.Name">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@hotel.Name</h5>
                            <p class="card-text text-muted mb-2"><i class="bi bi-geo-alt-fill"></i> @hotel.Address</p>
                            <p class="card-text flex-grow-1">@hotel.Description</p>

                            <hr class="my-3" />

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success rounded-pill px-3 py-2">
                                    Вільних номерів: @hotel.Rooms.Count
                                </span>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-outline-primary btn-sm">Детальніше</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>